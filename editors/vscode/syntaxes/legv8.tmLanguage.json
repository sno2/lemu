{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "comment": "This file is generated by src/grammars/tmLanguage.zig. Run 'zig build tmLanguage' to re-generate.",
  "name": "LEGv8",
  "scopeName": "source.legv8",
  "fileTypes": ["lv8", "legv8", "S"],
  "patterns": [
    {
      "name": "comment.line",
      "begin": "//",
      "end": "$"
    },
    {
      "name": "variable",
      "match": "\\b([XSD][0-9]|[XSD][1-2][0-9]|[XSD]3[01]|IP0|IP1|SP|FP|LR|XZR)\\b"
    },
    {
      "name": "keyword",
      "match": "\\b(ADD|ADDI|ADDIS|ADDS|AND|ANDI|ANDIS|ANDS|B\\.EQ|BEQ|B\\.NE|BNE|B\\.LT|BLT|B\\.LE|BLE|B\\.GT|BGT|B\\.GE|BGE|B\\.LO|BLO|B\\.LS|BLS|B\\.HI|BHI|B\\.HS|BHS|B\\.MI|BMI|B\\.PL|BPL|B\\.VS|BVS|B\\.VC|BVC|BL|BR|CBNZ|CBZ|EOR|EORI|LDUR|LDURB|LDURH|LDURSW|LDXR|LSL|LSR|MOVK|MOVZ|ORR|ORRI|STUR|STURB|STURH|STURW|STXR|SUB|SUBI|SUBIS|SUBS|FADDS|FADDD|FCMPS|FCMPD|FDIVS|FDIVD|FMULS|FMULD|FSUBS|FSUBD|LDURS|LDURD|MUL|SDIV|SMULH|STURS|STURD|UDIV|UMULH|HALT|DUMP|PRNT|PRNL|TIME|B|MOV|LDA|CMPI|CMP)\\b"
    },
    {
      "name": "entity.name.function",
      "match": "[a-zA-Z_][a-zA-Z0-9_]*"
    },
    {
      "name": "constant.numeric",
      "match": "#0[bB][01]+|0[bB][01]+"
    },
    {
      "name": "constant.numeric",
      "match": "#0[xX][0-9a-fA-F]+|0[xX][0-9a-fA-F]+"
    },
    {
      "name": "constant.numeric",
      "match": "#[0-9]+|[0-9]+"
    }
  ]
}
