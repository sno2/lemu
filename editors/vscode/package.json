{
  "name": "lemu",
  "displayName": "Lemu - LEGv8 Assembly",
  "icon": "lemu.png",
  "description": "LEGv8 language server, emulator, debugger, and snippets.",
  "author": "Carter Snook",
  "license": "MIT",
  "version": "0.1.9",
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/sno2/lemu",
    "directory": "editors/vscode"
  },
  "publisher": "sno2",
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "LEGv8",
    "Emulator",
    "Assembly"
  ],
  "engines": {
    "vscode": "^1.100.0"
  },
  "browser": "./out/extension",
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "lemu.run",
        "title": "Run Lemu emulator",
        "icon": "$(play)"
      },
      {
        "command": "lemu.debug",
        "title": "Run Lemu debugger",
        "icon": "$(debug)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "lemu.run",
          "when": "resourceLangId == LEGv8",
          "group": "navigation"
        },
        {
          "command": "lemu.debug",
          "when": "resourceLangId == LEGv8",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "lemu",
      "properties": {
        "lemu.exePath": {
          "type": "string",
          "description": "Path to the lemu executable. Fetches a remote binary if unset."
        }
      }
    },
    "configurationDefaults": {
      "[LEGv8]": {
        "editor.colorDecorators": false
      }
    },
    "languages": [
      {
        "id": "LEGv8",
        "aliases": [
          "LEGv8",
          "legv8"
        ],
        "extensions": [
          ".lv8",
          ".legv8",
          ".legv8asm",
          ".S"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "LEGv8",
        "scopeName": "source.legv8",
        "path": "./syntaxes/legv8.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "LEGv8",
        "path": "legv8.code-snippets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint",
    "package": "vsce package --baseContentUrl https://codeberg.org/sno2/lemu/raw/branch/main/editors/vscode",
    "publish": "vsce publish --baseContentUrl https://codeberg.org/sno2/lemu/raw/branch/main/editors/vscode"
  },
  "extensionDependencies": [
    "ms-vscode.wasm-wasi-core"
  ],
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^22",
    "@types/vscode": "^1.100.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^10.1.8",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "dependencies": {
    "@vscode/wasm-wasi": "^1.0.1",
    "@vscode/wasm-wasi-lsp": "^0.1.0-pre.7",
    "vscode-languageclient": "^10.0.0-next.12"
  }
}
